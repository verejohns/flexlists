{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "baseUrl": ".",
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/wysiwyg/wysiwygEditor.tsx",
    "src/components/wysiwyg/wysiwygEditor.jsx"
  ],
  "exclude": ["node_modules"]
}
